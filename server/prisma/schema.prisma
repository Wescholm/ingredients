datasource db {
  provider          = "mongodb"
  url               = env("DB_URL")
  shadowDatabaseUrl = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String @id @default(cuid()) @map("_id")
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
